		<s:fill>
			<s:SolidColor color="#99FFFF"/>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" width="100%" height="100%" maxHeight="60" 
			 fontSize="40" textAlign="center" 
			 paddingBottom="10" paddingLeft="10" paddingTop="10" color="red" />
