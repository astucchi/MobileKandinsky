	<fx:Metadata>
		[HostComponent("org.kdata.mobile.presentation.component.TitleLabel")]
	</fx:Metadata>
	
	<!-- SkinParts
	name=labelDisplay, type=spark.core.IDisplayText, required=true
	-->
